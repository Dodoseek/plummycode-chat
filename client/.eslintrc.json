{
    "extends": [
        "next/core-web-vitals",
        "prettier",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:tailwindcss/recommended"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "tsx": true
        }
    },
    "plugins": ["tailwindcss"]
}
